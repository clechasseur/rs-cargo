{
  "name": "rs-cargo",
  "version": "4.0.1",
  "type": "module",
  "private": false,
  "description": "Run cargo command",
  "main": "dist/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "scripts": {
    "all": "npm run lint && npm run build && npm run test",
    "bundle": "cp -r .matchers ./dist/",
    "build": "rm -rf ./dist/* && ncc build src/main.ts --minify && npm run bundle",
    "format": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "lint": "oxlint",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clechasseur/rs-cargo.git"
  },
  "keywords": [
    "actions",
    "rust",
    "cargo"
  ],
  "author": "clechasseur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clechasseur/rs-cargo/issues"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^3.0.0",
    "@clechasseur/rs-actions-core": "^7.0.3",
    "string-argv": "^0.3.2"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^24.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.14",
    "@vercel/ncc": "^0.38.4",
    "jest": "^30.2.0",
    "oxlint": "^1.50.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
